

{

	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"defaultProject": "app",
	"projects": {



		"@rcc/core":{
			"projectType":	"library",		
			"root": 		"lib/core",
			"sourceRoot":	"lib/core/src",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-ng-packagr:build",
					"options": {
									"tsConfig":	"lib/core/tsconfig.lib.json",
									"project":	"lib/core/ng-package.json"
								},
				}
			}
		},


		"@rcc/common":{
			"projectType":	"library",		
			"root": 		"lib/common",
			"sourceRoot":	"lib/common/src",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-ng-packagr:build",
					"options": {
									"tsConfig":	"lib/common/tsconfig.lib.json",
									"project":	"lib/common/ng-package.json"
								},
				}
			}
		},


		"@rcc/features":{
			"projectType":	"library",		
			"root": 		"lib/features",
			"sourceRoot":	"lib/features/src",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-ng-packagr:build",
					"options": {
									"tsConfig":	"lib/features/tsconfig.lib.json",
									"project":	"lib/features/ng-package.json"
								},
				}
			}
		},







		"app": {
			"root": "",
			"sourceRoot": "src",
			"projectType": "application",
			"prefix": "rcc",
			"schematics": {},
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:browser",
					"options": {
						"aot": true,
						"outputPath": "www",
						"index": "app/index.html",
						"main": "app/main.ts",
						"polyfills": "app/polyfills.ts",
						"tsConfig": "tsconfig.app.json",
						"assets": [
							{
								"glob": "**/*",
								"input": "app/assets",
								"output": "assets"
							},
							{
								"glob": "**/*.svg",
								"input": "node_modules/ionicons/dist/ionicons/svg",
								"output": "./svg"
							}
						],
						"styles": [
							{
								"input": "app/theme/variables.scss"
							},
							{
								"input": "app/global.scss"
							}
						],
						"scripts": []
					},
					"configurations": {
						"production": {
							"fileReplacements": [
								{
									"replace": "app/environments/environment.ts",
									"with": "app/environments/environment.prod.ts"
								}
							],
							"optimization": true,
							"outputHashing": "all",
							"sourceMap": false,
							"extractCss": true,
							"namedChunks": false,
							"aot": true,
							"extractLicenses": true,
							"vendorChunk": false,
							"buildOptimizer": true,
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "2mb",
									"maximumError": "5mb"
								}
							]
						},
						"ci": {
							"progress": false
						}
					}
				},

				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"options": {
						"browserTarget": "app:build"
					},
					"configurations": {
						"production": {
							"browserTarget": "app:build:production"
						},
						"ci": {
							"progress": false
						}
					}
				},
			 
			}
		},
		
		
	}  
}
